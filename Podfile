# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'Wallet' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Wallet
  pod 'Alamofire', '~> 4.7'
  pod 'AlamofireNetworkActivityIndicator', '~> 2.2'
  pod 'Slog'
  pod 'RealmSwift'
  pod 'SwiftLint'

  # social networks
  pod 'FacebookCore'
  pod 'FacebookLogin'
  pod 'GoogleSignIn'

  # crash analitics
  pod 'Fabric'
  pod 'Crashlytics'

  # crypto
  pod 'CryptoSwift'
  pod 'secp256k1.swift'
  pod 'OpenSSL-Universal'

end
